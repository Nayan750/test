  <%= image_tag "https://images.unsplash.com/photo-1487284122274-e864e9dec2bf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1472&q=80" , class:"banner-img" %>
  <h1 class="contactbannertitle text-center ">Contact US</h1>
</div>
<section class="">
  <div class="contactform">
  <div class="contactinfo p-2">
        <ul>
          <li class="info"><i class="fa-solid fa-location-pin contacticon"></i> Office 1004, 10 th floor
            Emirates Finanical Towers DIFC
            DUBAI, UAE
          </li>
          <li class="info"><i class="fa-solid fa-envelope contacticon"></i> info@auzmena.com</li>
          <li class="info"><i class="fa-sharp fa-solid fa-phone contacticon"></i> +97147708091</li>
        </ul>
    </div>
    <div class="contactinfo1 p-2">
        <h2>Get in Touch</h2>
           <%= form_for @contact do |f| %>
            <%= f.label :name, class:"text-white label" %></br>
            <%= f.text_field  :name, required: true, class: "contact-form-text-area form-control" %></br>

            <%= f.label :email, class:"text-white label"  %></br>
            <%= f.text_field :email, required: true, class: "contact-form-text-area form-control" %></br>
            <%= f.label :phone, class:"text-white label" %></br>
            <%= f.text_field :phone, required: true, class: "contact-form-text-area form-control" %></br>


            <%= f.label :message, class:"text-white label" %></br>
            <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area form-control", 
                  placeholder: "Send me a message"%></br>

            <div class= "d-none">
              <%= f.text_field :nickname, :hint => 'Leave this field blank!', style: 'display:none' %>
            </div>

            <%= f.submit 'Submit', class: 'btn btn-secondary' %>
    </div>
  </div>
